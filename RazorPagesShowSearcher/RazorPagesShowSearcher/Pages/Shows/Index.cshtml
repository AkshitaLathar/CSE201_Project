    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].ShowName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].ShowDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].ShowRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].NumOfSeasons)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].YearShowBegan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].Genra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Show[0].ShowTitle)
